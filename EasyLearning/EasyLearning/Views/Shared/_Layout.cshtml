<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=5.0">
    <title>@ViewBag.Title - Easy Learning</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/materialize")
    @Scripts.Render("~/bundles/modernizr")
    @Html.Hidden("RedirectTo", Url.Action("Login", "Account"))
</head>
<body>
    <header>
        <nav>
            <div class="right header-nav">
                <div class="nav-wrapper">
                    <ul class="right hide-on-med-and-down">
                        <li><h5 id="nameUser"></h5></li>
                    </ul>
                </div>
            </div>
            <div class="nav-wrapper">
                <a data-activates="mobile-menu" class="button-collapse">
                    <i class="material-icons">menu</i>
                </a>
            </div>
        </nav>
        <ul id="menu" class="hide-on-med-and-down side-nav">
            <li class="logo center-align">
                <a id="logo-container" class="app-logo" href="@Url.Action("Index", "Home")">
                    <object id="front-page-logo" type="image/png" data="~/Logo/logo2.png" class="center-align"></object>
                </a>
            </li>
            <li class="options">
                <ul class="collapsible collapsible-lessons" data-collapsible="expandable">
                    <li class="bold active">
                        <a class="collapsible-header white-text waves-effect waves-teal">
                            <i class="material-icons">library_books</i>
                            Niveles
                        </a>
                        <div id="options" class="collapsible-body">
                            <ul id="levels"></ul>
                        </div>
                        <div class="page-footer teal accent-4">
                            <div class="row">
                                
                            </div>
                        </div>
                    </li>
                    <li id="configurationLink"></li>
                    <li>
                        <a onclick="account.logout()" class="collapsible-header white-text waves-effect waves-teal">
                            <i class="material-icons">exit_to_app</i>Cerrar sesion
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
        <ul id="mobile-menu" class="side-nav">
            <li class="logo">
                <a id="logo-container" class="app-logo" href="@Url.Action("Index", "Home")">
                    <object id="front-page-logo" type="image/png" data="~/Logo/logo2.png"></object>
                </a>
            </li>
            <li class="options">
                <ul class="collapsible collapsible-lessons" data-collapsible="expandable">
                    <li class="bold active">
                        <a class="collapsible-header white-text waves-effect waves-teal">
                            <i class="material-icons">library_books</i>
                            Niveles
                        </a>
                        <div id="options" class="collapsible-body">
                            <ul id="levelsMobile"></ul>
                        </div>
                    </li>
                    <li id="configurationLinkMovil"></li>
                    <li>
                        <a onclick="account.logout()" class="collapsible-header white-text waves-effect waves-teal">
                            <i class="material-icons">exit_to_app</i>Cerrar sesion
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </header>
    <main>
        <div class="container" id="viewContainer">
            <div class="row" id="lessonByLevel" hidden>
                <div class="col offset-m2 offset-l2 s12 m8 l8 card">
                    <div class="card-content center-align">
                        <div class="card-title left-align">Lecciones</div>
                        <ul id="lessons" class="collection"></ul>
                    </div>
                </div>
            </div>

            <div class="col offset-m2 offset-l2 s10 m8 l8 card" hidden id="exercisesAndTips">
                <div class="card-title" id="progressHidden" hidden>
                    <div class="progress">
                        <div class="determinate" id="progressBar"></div>
                    </div>
                </div>

                <div class="card-content">
                    <div class="valign-wrapper">
                        <div class="valign" id="exercises"></div>
                        <div class="right-align" id="nextButton" hidden>
                            <div class="valign">
                                <a class="btn-floating teal lighten-2" onclick="ClientExerciseAndTip.nextPartialView(0)">
                                    <i class="material-icons">skip_next</i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" id="bodyContainer">
                @RenderBody()
            </div>
        </div>
    </main>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
    <link href="~/Styles/LessonStyle.css" rel="stylesheet" />
    <script src="~/Scripts/Project/AccountController.js"></script>
    <script src="~/Scripts/Project/Layout.js"></script>
    <script src="~/Scripts/Project/Progress.js"></script>
    <script src="~/Scripts/Project/Dropdownlis.js"></script>
    <script src="~/Scripts/Project/PutLessonProgress.js"></script>
    <script src="~/Scripts/Project/LessonProgres.js"></script>
    <script src="~/Scripts/Project/LevelMenuController.js"></script>
    <script src="~/Scripts/Project/LanguageSettingLink.js"></script>
    <script src="~/Scripts/Project/ClientLessonByLevel.js"></script>
    <script src="~/Scripts/Project/LessonEnabler.js"></script>
    <script src="~/Scripts/Project/ClientLesson.js"></script>
    <script src="~/Scripts/Project/AccountController.js"></script>
    <script src="~/Scripts/Project/ParametersCreated.js"></script>
    <script src="~/Scripts/Project/ProgressBarCalculator.js"></script>
    <script src="~/Scripts/Project/ClientExerciseAndTip.js"></script>
    <script src="~/Scripts/Project/SelectedCorrectWrongAnswer.js"></script>
    <script src="~/Scripts/Project/SimpleSelectionEvaluator.js"></script>
    <script src="~/Scripts/Project/VocabularyTips.js"></script>
    <script src="~/Scripts/Project/responsivevoice.js"></script>
    <script src="~/Scripts/Project/Practice.js"></script>
</body>
</html>